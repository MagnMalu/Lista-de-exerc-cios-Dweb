<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mudarcor</title>
</head>
<body>
    <button onclick="mudarCor()">Alterar Cor</button>

    <script>

    const cores=["lightpink","lightblue","lightgreen","lavender"];
    let indice=0;

        function mudarCor(){
            document.body.style.backgroundColor=cores[indice];
            indice=(indice+1)%cores.length;
        }
    </script>
</body>
</html>

