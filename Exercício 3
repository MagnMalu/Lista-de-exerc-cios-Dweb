<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar valor</title>
</head>
<body>
    <script>
        let contador = 100;

    function atualizar (){
        document.getElementById("valor").innerText = contador;

    }

    function aumentar(){
        contador ++;
        atualizar();
    }

    function diminuir(){
        contador--;
        atualizar();
    }
    </script>
   
</body>
    <h1>Aumentar/Diminuir</h1>
    <p id="valor">100</p>
    <button onclick="diminuir()">Diminuir</button>
    <button onclick="aumentar()">Aumentar</button>
</html>
