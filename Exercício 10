imc.js

function calcularIMC(){
    peso= parseFloat(document.formulario.peso.value);
    altura= parseFloat(document.formulario.altura.value);
    resultado= (peso/(altura**2)).toFixed(2)
    alert("Seu IMC Ã©:"+resultado);
}
